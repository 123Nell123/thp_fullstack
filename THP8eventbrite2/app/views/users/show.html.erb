<p id="notice"><%= notice %> remarque ici </p>


    <div class="box-shadow container" style="margin-top : 20px;">
        <h3 class="card-header text-center"><%= @user.first_name %> <%= @user.last_name %></h3>
        <div class="container col-8 p-4">
            <h5 class="card-title text-center"><%= @user.email %></h5>
            <p class="card-body"> 
                <%= @user.description %>
            </p>
            <p>


<p class="card-body">
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p class="card-body">
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>


<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar' %>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>

<h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>


<%= flash[:success] %>
<%= flash[:warning] %>

        </div>
    </div>